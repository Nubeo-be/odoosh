<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="product_templ_advance_mgmt" model="ir.ui.view">
    <field name="name">product.templ.advance.mgmt</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="point_of_sale.product_template_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='to_weight']" position="after">
        <field name="radio_advance_mgmt" attrs="{'invisible': [('available_in_pos', '=', False)]}" groups="base.group_no_one" widget="radio"/>
      </xpath>
    </field>
  </record>
</odoo>