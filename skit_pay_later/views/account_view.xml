<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="pay_later_account_journal" model="ir.ui.view">
			<field name="name">account.journal.form.inherit</field>
			<field name="model">account.journal</field>
			<field name="inherit_id" ref="account.view_account_journal_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='type']" position="after">
					<field name="is_pay_later" />
				</xpath>
			</field>
		</record>
		<record id="pos_payment_method_view_form_inherit_paylater" model="ir.ui.view">
            <field name="name">Payment Method</field>
            <field name="model">pos.payment.method</field>
            <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='split_transactions']" position="after">
                    <field name="is_pay_later"/>
                </xpath>
            </field>
        </record>
</data>
</odoo>