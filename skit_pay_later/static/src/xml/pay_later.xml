<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
<t t-extend='OrderSelectorWidget'>
        <t t-jquery='.deleteorder-button' t-operation='after'>
        <div title="Pay Later">
        	<span class="icon order-button square paylater PayLaterButton">
				<i class="oe_link_icon oe-link fa fa-history oe-white oe_icon_customfloat" />
			</span>	
		</div>	
        </t>
    </t>
    
    
    <t t-name="OrderReprintReceiptScreenWidget">
        <div class='receipt-screen screen'>
            <div class='screen-content'>
               <div class='top-content'>
		            <h1>Change: <span class='change-value'>0.00</span></h1>
		            <span class='button order_reprint_next reprint_receipt_btn'>
                        Next Order
                        <i class='fa fa-angle-double-right'></i>
                    </span>
                </div>
                <div class="centered-content touch-scrollable">
                	<div class="button print_invoice">
                        <i class='fa fa-print'></i> Print Invoice
                    </div>
                    <div class="button reprintrec">
                        <i class='fa fa-print'></i> Print Receipt
                    </div>
                    <div class="pos-receipt-container">
                    </div>
                </div>
            </div>
        </div>
    </t>
    
    
    <t t-name="PayLaterScreenWidget">
        <div class="paylater clientlist-screen screen">
            <div class="screen-content paylater-screen-content">
                <section class="top-content">   
	                <span class='button back'>
	                        <i class='fa fa-angle-double-left'></i>
	                        Cancel
	                </span> 
	                <span>                                                  
	            		<t t-if='widget.pos.get_client()'>
	            			<div class='client-name'><t t-esc="widget.pos.get_client().name" /></div>  
	            		</t>
	            	</span>              		                              
                </section>
                <section class="full-content">
                    <div class='window'>
                        <section class='subwindow collapsed'>
                        	<p class="dltitle">Pending Invoice </p>
                            <div class='subwindow-container border section-max-height'>
                                <div class='subwindow-container-fix  touch-scrollable scrollable-y'>                                
                                 	<table id="pending_invoice_otable"></table>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </div>
        </div>
    </t>
    
    <t t-name="PInvoiceLineScreenWidget">
        <table class='dl-olist' id="pendinginvoice_oltable">
			 <thead>
	            <tr>
	                <th>S.no</th>
	                <th>Product</th>      
	                <th class='text-right' >Qty</th>
	                <th class='text-right' >UnitPrice</th>
	                <th class='text-right' >Amount</th>
	            </tr>
	          </thead>
	          <tbody>
		          <t t-foreach="lines" t-as="line">
			          <tr>
			          	<td><t t-esc='line.sno or ""' /></td> 
			            <td><t t-esc='line.product or ""' /></td>
			            <td class='text-right' ><t t-esc='line.qty or ""' /></td>
			            <td class='text-right' ><t t-esc='line.price_unit or ""' /></td>     
			            <td class='text-right' ><t t-esc='line.amount or ""' /></td>          
			          </tr>
		          </t>
	          </tbody>
		 </table> 
    </t>
    
    <t t-extend='PaymentScreen-Paymentlines'>
		<t t-jquery='.paymentlines-empty' t-operation='replace'>
			<div class='paymentlines-empty'>
                <div class='total'>
	                <t t-if="widget.pos.get_order().get_pending()">
	                	<t t-esc="widget.format_currency(widget.pos.get_order().get_pending_amt())"/>
	                </t>
	                <t t-else="">
	                	 <t t-esc="widget.format_currency(order.get_total_with_tax())"/>
	                </t>
                </div>
                <div class='message'>
                    Please select a payment method. 
                </div>
            </div>
		</t>
	</t>
	
	<t t-name="PosTicketReceipt">
        <div class="pos-sale-ticket">
			<t t-foreach="orders" t-as="order">
            	<div class="pos-center-align"><t t-esc="moment().format('L LT')"/> <t t-esc="order.pos_reference"/></div>
            <br />
            <div class="receipt-customer">
                Customer: <t t-esc="order.customer"/><br />
            </div>
            <div class="receipt-mobile">
                Mobile No.: <t t-esc="order.mobile"/><br />
            </div>
            <t t-esc="widget.pos.company.name"/><br />
            <!-- <div class="receipt-phone">
                Phone: <t t-esc="widget.pos.company.phone || ''"/><br />
            </div> -->
            <div class="receipt-user">
                User: <t t-esc="widget.pos.get_cashier().name"/><br />
            </div>
            <br />
            <table class='receipt-orderlines'>
                <colgroup>
                    <col width='50%' />
                    <col width='25%' />
                    <col width='25%' />
                </colgroup>
                <tr t-foreach="orderlines" t-as="orderline">
                    <td>
                        <t t-esc="orderline.product_id"/>
                         <t t-if="orderline.discount > 0">
                            <div class="pos-disc-font">
                                With a <t t-esc="orderline.discount"/>% discount
                            </div>
                        </t>
                    </td>
                    <td class="pos-right-align">
                        <t t-esc="orderline.qty"/>
                    </td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(orderline.price_unit)"/>
                    </td>
                </tr>
            </table>
            <br />
            <table class='receipt-total'>
                <tr>
                    <td>Subtotal:</td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(order.amount_total-order.amount_tax)"/>
                    </td>
                </tr>
                <tr>
                    <td>Tax:</td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(order.amount_tax)" />
                    </td>
                </tr>
                <tr>
                    <td>Discount:</td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(discount_total)"/>
                    </td>
                </tr>
                <tr class="emph">
                    <td>Total:</td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(order.amount_total)"/>
                    </td>
                </tr>  
            </table>
            <br />
            <table class='receipt-paymentlines'>
                <t t-foreach="paymentlines" t-as="line">
                  <tr>
                      <td>
                          <t t-esc="line.name"/>
                      </td>
                      <td>
                          <t t-esc="line.date"/>
                      </td>
                      <td class="pos-right-align">
                          <t t-esc="widget.format_currency(line.amount)"/>
                      </td>
                  </tr>
                </t>
            </table>
            <br />
            <table class='receipt-change'>
                <tr><td>Change:</td><td class="pos-right-align">
                    <t t-esc="widget.format_currency(change)"/>
                    </td></tr>
                <tr><td>Pay Later:</td><td class="pos-right-align">
                    <t t-esc="widget.format_currency(balance)"/>
                    </td></tr>
            </table>
            </t>
        </div>
    </t>
</templates>